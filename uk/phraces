            "мгновенно", "с усердием", "быстро", "красиво", "жестко", "мягко", "весело", "старательно"
        ]

        function sample () {
            let i = getRandomInt(4)
            if (i == 0) {
                return fwu(nouns[getRandomInt(Object.keys(nouns).length)][1]) + " " + adverbs[getRandomInt(adverbs.length)] + " " + verbs[getRandomInt(Object.keys(verbs).length)][3] + " " + (nouns[getRandomInt(Object.keys(nouns).length)][5])
            }
            if (i == 1) {
                return fwu(nouns[getRandomInt(Object.keys(nouns).length)][1]) + " " + adverbs[getRandomInt(adverbs.length)] + " " + verbs[getRandomInt(Object.keys(verbs).length)][2] + " " + (nouns[getRandomInt(Object.keys(nouns).length)][4])
            }
            if (i == 2){
                return fwu(nouns[getRandomInt(Object.keys(nouns).length)][1]) + " " + adverbs[getRandomInt(adverbs.length)] + " " + verbs2[getRandomInt(Object.keys(verbs2).length)][2] + " " + (nouns[getRandomInt(Object.keys(nouns).length)][5])
            }
            if (i == 3){
                return fwu(nouns[getRandomInt(Object.keys(nouns).length)][1]) + " " + adverbs[getRandomInt(adverbs.length)] + " " + verbs[getRandomInt(Object.keys(verbs).length)][2] + " " + (nouns[getRandomInt(Object.keys(nouns).length)][4]) + " вместе с " + (nouns[getRandomInt(Object.keys(nouns).length)][5])
            }
        }

